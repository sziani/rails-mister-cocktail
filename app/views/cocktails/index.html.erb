<div class="navbar-lewagon navbar-collapse">
  <div class="nav-link">
      <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary"%>
  </div>
</div>

<div class="container">
  <h1>Cocktails' list</h1>
    <div class="cards">
    <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path "pmptog725zpnsjzh1nt7", height: 300, width: 400, crop: :fill %>')">
      <%= cocktail.name %>
      </div>
    <% end %>
    <% end %>
    </div>
</div>
